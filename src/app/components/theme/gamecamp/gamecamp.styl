@import '~styles/variables'
@import '../../../../lib/gj-lib-client/stylus/animation/easing'

body.theme-gamecamp
	min-height: 100vh
	padding-bottom: ($grid-gutter-width / 2)

	@media $media-md-up
		padding-top: ($grid-gutter-width / 2)

	@import '../../../styles/_scaffolding'

	.content-container
		padding-top: ($grid-gutter-width / 2)
		padding-bottom: ($grid-gutter-width / 2)

	.widget-compiler-widget-game-packages
		margin: 0

	.gamecamp-media-bar

		@media $media-mobile
			.media-bar
				margin-bottom: ($grid-gutter-width / 2)
				background-color: transparent

		@media $media-sm
			.media-bar-item
				width: 300px !important
				height: auto !important

		@media $media-md-up
			.media-bar
				padding: 0
				background-color: transparent
				overflow: visible

				&-items
					white-space: initial

				&-item
					margin: 0
					margin-bottom: ($grid-gutter-width / 2)
					width: 100% !important
					height: auto !important
					background-color: transparent

					&-wrapper
						opacity: 1

					a
						transition: all 350ms $strong-ease-out

						&::before
						&::after
							display: none
