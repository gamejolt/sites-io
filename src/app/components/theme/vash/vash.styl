@import '~styles/variables'
@import '../../../../lib/gj-lib-client/stylus/animation/easing'

body
	min-height: 100vh
	padding-bottom: $grid-gutter-width

@media $media-md-up
	body
		padding-top: $grid-gutter-width

#theme-vash

	@import '../../../styles/_scaffolding'

	.media-bar

		@media $media-xs
			margin-bottom: $grid-gutter-width-xs
			margin-left: -($grid-gutter-width-xs / 2)
			margin-right: -($grid-gutter-width-xs / 2)
			background-color: transparent

		@media $media-sm-up
			margin: ($grid-gutter-width / 2)
			margin-left: -($grid-gutter-width / 2)
			margin-right: -($grid-gutter-width / 2)
			padding: 0
			background-color: transparent
			overflow: visible

			@media $media-md-up
				margin-left: -200px
				margin-right: -200px

			&-items
				white-space: initial

			&-item
				width: 50% !important
				height: auto !important
				margin: 0 !important
				padding: ($grid-gutter-width / 2) !important
				background-color: transparent

				&-wrapper
					opacity: 1

				a
					transition: all 350ms $strong-ease-out

					&::before
					&::after
						display: none
