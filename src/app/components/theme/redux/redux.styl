@import '~styles/variables'
@import '../../../../lib/gj-lib-client/stylus/common/mixins'

body.theme-redux
	background-color: black
	padding: 30px

	// Keep this big.
	// Big monitors don't exist, right?
	// Why worry about them.
	$max-width: 1000px

	.content
		font-family: "Comic Sans MS", "Comic Sans", cursive
		color: yellow
		font-size: 16px
		text-align: center

		h1, h2, h3, h4, h5, h6, p
			margin-bottom: 1.5rem

		h1, h2, h3, h4, h5, h6
			color: red
			font-family: "Comic Sans MS", "Comic Sans", Arial, Helvetica, sans-serif

		a
		a:hover
			color: blue

		hr
			border-bottom: 5px ridge

		blockquote
			border: 0

		img
			display: inline-block
			width: 100%
			max-width: 1000px
			height: auto
			vertical-align: top

		table
			width: 100%
			margin-bottom: $line-height-computed
			border: 5px ridge

		th
		td
			text-align: center

		td
		th
			padding: $table-cell-padding
			line-height: $line-height-base
			vertical-align: middle
			border-top: 5px ridge
			border-right: 5px ridge

	.video-embed
	.widget-compiler-widget-soundcloud
		max-width: 900px
		margin: 0 auto

	.media-bar
		background-color: transparent
